<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
             x:Class="C1Weather.InfoPage">
    <Grid Padding = "20"  BackgroundColor="#7986CB">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Source="C1logoHexwhite2048x.png" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center"/>
        <StackLayout Padding = "0,10,0,0" Grid.Row="1">
            <Label x:Name="aboutLabel" FontSize="Small" VerticalOptions= "Center" TextColor="White" HorizontalOptions="Center" />
            <Label x:Name="weatherLabel" FontSize="Small" VerticalOptions= "Center" TextColor="White" HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>