<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DashboardDemo.Views.TasksGroupPage"
             Padding="20">
    <Grid Padding="20">
        <Grid.Padding>
            <OnPlatform x:TypeArguments="Thickness" iOS="10,30,10,10" />
        </Grid.Padding>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Picker x:Name="picker"/>
        <StackLayout Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="btnOK" Text="OK" Clicked="OnOKClicked" HorizontalOptions="FillAndExpand" BackgroundColor="#051839" TextColor="White"/>
            <Button x:Name="btnCancel" Clicked="OnCancelClicked" HorizontalOptions="FillAndExpand" BackgroundColor="#051839" TextColor="White"/>
        </StackLayout>
    </Grid>
</ContentPage>